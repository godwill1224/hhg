header#header.header.fixed-top.d-flex.align-items-center
  .logo.d-flex.align-items-center.logo-container
    a(href='dashboard.html')
      img(src='/img/logo.png' alt='logo')

  nav.header-nav.ms-auto
    ul.d-flex.align-items-center
      li.nav-item.dropdown.pe-3
        a.nav-link.nav-profile.d-flex.align-items-center.pe-0(href='#' data-bs-toggle='dropdown')
          img.rounded-circle(src='/img/profile-img.png' alt='Profile')
          span.d-none.d-md-block.dropdown-toggle.ps-2 Mawa

        ul.dropdown-menu.dropdown-menu-end.dropdown-menu-arrow.profile
          li.dropdown-header
            h6 Mawa Godwill
            span Branch Manager
          li
            hr.dropdown-divider
          li
            a.dropdown-item.d-flex.align-items-center(href='profile.html')
              i.bi.bi-person
              span My Profile
          li
            hr.dropdown-divider
          li
            a.dropdown-item.d-flex.align-items-center(href='dashboard.html')
              i.bi.bi-box-arrow-right
              span Log Out

      li
        i.bi.bi-list.toggle-sidebar-btn

aside#sidebar.sidebar
  ul#sidebar-nav.sidebar-nav
    li.nav-item(class=(activeSidebarLink === 'dashdoard' ? 'active' : ''))
      a.nav-link(href='dashboard.html')
        i.bi.bi-grid
        span Dashboard
